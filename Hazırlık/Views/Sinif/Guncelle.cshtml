@model Sinif

<form asp-controller="Sinif" asp-action="Guncelle" method="post">
    <input type="hidden" asp-for="SinifID" />
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="SinifAdi"></label>
        <input asp-for="SinifAdi" class="form-control" value="@Model.SinifAdi" />
    </div>
    <div class="form-group">
        <label asp-for="SinifKodu"></label>
        <input asp-for="SinifKodu" class="form-control" value="@Model.SinifKodu" />
    </div>
    <div class="form-group" style="margin:10px 0px">
        <button type="submit" class="btn btn-outline-success">Kaydet</button>
    </div>
</form>